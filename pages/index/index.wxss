/* pages/index/index.wxss */
.banners {
  width: 100%;
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}
.navContainer {
  display: flex;
}
.navItem {
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}
.navItem .iconfont {
  height: 100rpx;
  width: 100rpx;
  background-color: rgb(240, 19, 19);
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}
.navItem text {
  font-size: 26rpx;
}
.recommendContainer {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.recommendContainer .header {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.recommendContainer .header .title{
  font-size: 26rpx;
  line-height: 60rpx;
  color: #666;
}
.recommendContainer .header view {
  display: flex;
  justify-content: space-between;
}
.recommendContainer .header .more {
  border: 1px solid #333;
  border-radius: 30rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
}
.reacommendScroll {
  display: flex;
  height: 300rpx;
}
.scrollItem {
  width: 200rpx;
  margin-right: 10rpx;
}
.scrollItem image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
  
}
.scrollItem text {
  font-size: 26rpx;
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

